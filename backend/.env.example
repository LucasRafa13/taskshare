# ======================
# APLICAÇÃO
# ======================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ======================
# BANCO DE DADOS
# ======================
# Para desenvolvimento local
DATABASE_URL="postgresql://taskshare_user:taskshare_password@localhost:5432/taskshare"

# Para Docker
# DATABASE_URL="postgresql://taskshare_user:taskshare_password@postgres:5432/taskshare"

# ======================
# AUTENTICAÇÃO JWT
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ======================
# CORS
# ======================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ======================
# LOGS
# ======================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# EMAIL (FUTURO)
# ======================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@taskshare.com

# ======================
# UPLOAD DE ARQUIVOS (FUTURO)
# ======================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# ======================
# SEGURANÇA
# ======================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# ======================
# MONITORAMENTO (FUTURO)
# ======================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ======================
# DESENVOLVIMENTO
# ======================
DEBUG=taskshare:*
PRETTY_LOGS=true